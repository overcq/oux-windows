struct E_window_Q_window_Z
{ struct E_mem_Q_tab_Z *object;
  HWND handle;
  HDC dc, dc_object_mask;
  HBITMAP drawable;
  HBITMAP object_mask;
  int x, y;
  int width, height;
  RECT border;
};
