COLORREF
E_window_Q_image_R_pixel( struct E_window_Q_window_Z *window
, int x
, int y
){  J_assert( x >= 0 );
    J_assert( y >= 0 );
    return GetPixel( window->dc, x, y );
}
I
E_window_Q_object_mask_R_object_id( struct E_window_Q_window_Z *window
, int x
, int y
){  J_assert( x >= 0 );
    J_assert( y >= 0 );
    return GetPixel( window->dc_object_mask, x, y );
}
